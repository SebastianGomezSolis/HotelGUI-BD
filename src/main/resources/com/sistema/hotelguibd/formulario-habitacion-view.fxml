<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="775.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistema.hotelguibd.controller.FormularioHabitacionController">
    <children>
        <!-- Panel principal con glassmorphism -->
        <AnchorPane layoutX="25.0" layoutY="30.0" prefHeight="500.0" prefWidth="721.0" style="-fx-background-color: rgba(255, 255, 255, 0.15); -fx-background-radius: 20; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 20, 0.3, 0, 10);">
            <children>
                <!-- Título -->
                <Label layoutX="264.0" layoutY="23.0" text="Registro de Habitación" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <!-- Subtítulo -->
                <Label layoutX="186.0" layoutY="50.0" prefWidth="350.0" text="Ingrese los datos en las casillas para crear y guardar la habitación." textAlignment="CENTER" textFill="rgba(255, 255, 255, 0.9)" wrapText="true">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <!-- Formulario -->
                <VBox layoutX="130.0" layoutY="76.0" prefHeight="328.0" prefWidth="462.0" spacing="12">
                    <children>
                        <!-- Campo Número de Habitación -->
                        <VBox prefHeight="75.0" prefWidth="462.0" spacing="5">
                            <children>
                                <Label id="lblNumeroHbitacion" text="Número de Habitación" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtNumeroHabitacion" prefHeight="32.0" prefWidth="350.0" promptText="Ingrese número de habitación" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 8; -fx-padding: 0 12 0 12; -fx-font-size: 12;" />
                            </children>
                        </VBox>

                        <!-- Campo Estado -->
                        <VBox prefHeight="75.0" prefWidth="462.0" spacing="5">
                            <children>
                                <Label id="lblEstado" text="Estado" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtEstadoHabitacion" prefHeight="32.0" prefWidth="350.0" promptText="Ingrese estado (Disponible/Ocupada)" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 8; -fx-padding: 0 12 0 12; -fx-font-size: 12;" />
                            </children>
                        </VBox>

                        <!-- Campo Precio -->
                        <VBox prefHeight="80.0" prefWidth="462.0" spacing="5">
                            <children>
                                <Label id="lblPrecio" text="Precio" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtPrecioHabitacion" prefHeight="32.0" prefWidth="350.0" promptText="Ingrese precio por noche" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 8; -fx-padding: 0 12 0 12; -fx-font-size: 12;" />
                            </children>
                        </VBox>

                        <!-- Campo Capacidad -->
                        <VBox prefHeight="71.0" prefWidth="462.0" spacing="5">
                            <children>
                                <Label id="lblCapacidad" text="Capacidad" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtCapacidadHabitacion" prefHeight="34.0" prefWidth="462.0" promptText="Ingrese capacidad de personas" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 8; -fx-padding: 0 12 0 12; -fx-font-size: 12;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Botones -->
                <Button id="btnGuardar" fx:id="btnGuardarHabitacion" layoutX="214.0" layoutY="424.0" mnemonicParsing="false" onAction="#guardarHabitacion" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-weight: bold;" text="Guardar">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <Button id="btnRegresar" layoutX="408.0" layoutY="424.0" mnemonicParsing="false" onAction="#cancelarHabitacion" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 18; -fx-cursor: hand; -fx-font-weight: bold;" text="Cancelar">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <!-- Progress Indicator -->
                <ProgressIndicator fx:id="progress" layoutX="130.0" layoutY="290.0" prefHeight="25.0" prefWidth="25.0" style="-fx-progress-color: white;" visible="false" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
